<% layout('layouts/boilerplate') -%>
<body>
  <div class="row">
    <br /><br />
    <div class="col-8 offset-2">
      <h2>Edit the listing details</h2>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <br />
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
            required
          />
          <br />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <br />
          <textarea name="listing[description]" class="form-control" required>
 <%= listing.description %></textarea
          >
          <br />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <br />
          <input
            type="file"
            name="listing[image]"
            class="form-control"
          />
          <br />
        </div>
        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <br />
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              class="form-control"
              required
            />
            <br />
          </div>
          <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <br />
            <input
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
              class="form-control"
              required
            />
            <br />
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <br />
          <input
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            class="form-control"
            required
          />
          <br />
        </div>
        <button class="btn btn-dark" style="border: none" type="submit">
          Submit
        </button>
      </form>
    </div>
  </div>
</body>
