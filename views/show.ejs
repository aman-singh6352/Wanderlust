<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row show">
    <div class="col-8 offset-2 mt-3">
      <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-2 listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-image"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %>
          <br />
          <b>Price:</b> &#8377; <%= (listing.price).toLocaleString("en-IN")
          %>/night
          <br />
          <b>Location:</b> <%= listing.location %>
          <br />
          <b>Country:</b> <%= listing.country %>
        </p>
      </div>
    </div>

    <br />
    <% if(user && user._id.equals(listing.owner._id)){ %>
    <div class="btns col-8 offset-2">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary"
        >Edit</a
      >
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>

    <div class="col-8 offset-2 mb-3 mt-3">
      <% if(user){ %>
      <h4>Leave a review</h4>
      <form
        action="/listings/<%= listing._id %>/reviews"
        method="post"
        class="mb-3 mt-3"
      >
        <div>
          <fieldset class="starability-slot">
            <p>Rating:</p>
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="Review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="Review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="Review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="Review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="Review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="Review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3 mt-3">
          <label for="comment">Comments</label>
          <textarea
            name="Review[comment]"
            id="comment"
            rows="8"
            required
            class="form-control"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-outline-primary">Submit</button>
      </form>
      <% } %>
      <hr />
      <% if(listing.reviews.length) { %>
        <p><b>All Reviews</b></p>
        <div class="row">
          <% for(let review of listing.reviews){ %>
            <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text">
                  <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated: 3 stars
                </p>
                  <a
                    href="/listing/<%= listing._id %>/review/<%= review._id %>"
                    class="btn btn-primary"
                    >Delete</a
                  >
                </p>
              </div>
            </div>
          <% } %>
        </div>
      <% } %>
      <div class="map">
        <h3>Where you'll be</h3>
        <div id="map"></div>
      </div>
    </div>
  </div>
</body>
